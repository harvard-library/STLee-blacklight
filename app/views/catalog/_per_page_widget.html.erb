<% if show_sort_and_per_page? and !blacklight_config.per_page.blank? %>

  <span class="sr-only"><%= t('blacklight.search.per_page.title') %></span>
  <div id="per-page-dropdown">
    <a data-dropdown="perpage" aria-controls="perpage" aria-expanded="false"><%= t(:'blacklight.search.per_page.button_label', :count => current_per_page) %><span class="caret right"></span></a>
    <ul id="perpage" class="f-dropdown" data-dropdown-content aria-hidden="true" tabindex="-1">
      <%- per_page_options_for_select.each do |(label, count)| %>
          <li><%= link_to(label, url_for(search_state.params_for_search(per_page: count))) %></li>
      <%- end -%>
    </ul>
  </div>

<% end %>
