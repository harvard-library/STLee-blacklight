<% # container for a single doc -%>
<div class="hl__itemGridView">
  <div class="hl__itemGridViewContainer <%= render_document_class document %> document-position-<%= document_counter%>"  data-document-counter="<%= document_counter %>" itemscope itemtype="<%= document.itemtype %>">
    <%= render_document_partials document, blacklight_config.view_config(document_index_view_type).partials, :document_counter => document_counter %>
  </div>
</div>
