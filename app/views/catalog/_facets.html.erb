<% # main container for facets/limits menu -%>
<% if has_facet_values?  %>
    <div id="facets" class="facets__container">

      <h2 class='facets__heading'>
        <%= t('blacklight.search.facets.title') %>
      </h2>

      <div id="facet-panel-collapse" class="collapse panel-group">
        <%= render_facet_partials %>
      </div>

      <%=link_to 'Clear All', start_over_path, :class => "facets__clearall", :id=>"startOverLink" %>
    </div>
<% end %>
